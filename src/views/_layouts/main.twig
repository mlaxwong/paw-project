{% extends 'base.twig' %}

{% block body %}
    <div class="global-wrapper">
        <header id="master-header">
            {{- beginBlock('header', true) -}}
            <nav class="navbar fixed-top navbar-expand-lg navbar-light px-0">
                <div class="container">
                    <a href="{{ url(['/']) }}" class="navbar-brand">Trinalusion</a>
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a href="#" class="nav-link">{{ t('app', 'Website') }}</a></li>
                        <li class="nav-item"><a href="#" class="nav-link">{{ t('app', 'Mobile APP') }}</a></li>
                        <li class="nav-item"><a href="{{ url(['/hosting']) }}" class="nav-link">{{ t('app', 'Hosting') }}</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="#" class="nav-link">{{ t('app', 'Login') }}</a></li>
                    </ul>
                </div>
            </nav>
            <div class="banner-wrapper">
                <div class="container">
                    <div class="banner">
                        {{- beginBlock('banner', true) -}}{{- endBlock() -}}
                    </div>
                </div>
            </div>
            {{- endBlock() -}}
        </header>
        <main>
            {{ content | raw }}
            {{- beginBlock('section-contact', true) -}}
            <section class="section-contact">
                <div class="container text-center">
                    <h2>{{ t('app', 'Let\'s get in touch') }}</h2>
                    <form class="col-md-10 offset-md-1">
                        <div class="form-row">
                            <div class="col form-label-group">
                                <input id="form-contact-input-name" name="name" type="text" class="form-control" placeholder="{{ t('app', 'Your Full Name') }}"/>
                                <label class="text-left" for="form-contact-input-name">{{ t('app', 'Your Full Name') }}</label>
                            </div>
                            <div class="col form-label-group">
                                <input id="form-contact-input-email" name="email" type="email" class="form-control" placeholder="{{ t('app', 'Your Email Address') }}"/>
                                <label class="text-left" for="form-contact-input-email">{{ t('app', 'Your Email Address') }}</label>
                            </div>
                        </div>
                        <div class="form-row">
                                <div class="col form-label-group">
                                    <input id="form-contact-input-contact" name="phone" type="tel" class="form-control" placeholder="{{ t('app', 'Your Contact Number') }}"/>
                                    <label class="text-left" for="form-contact-input-contact">{{ t('app', 'Your Contact Number') }}</label>
                                </div>
                                <div class="col form-label-group">
                                    <select name="location" id="form-contact-input-location" class="form-control">
                                        <option value="">{{ t('app', '-- Select State --') }}</option>
                                        <option value="Penang">Penang</option>
                                        <option value="Kedah">Kedah</option>
                                    </select>
                                    <label class="text-left" for="form-contact-input-location">{{ t('app', 'Your Location') }}</label>
                                </div>
                            </div>
                        <div class="form-row">
                            <div class="col form-label-group">
                                <textarea id="form-contact-input-message" name="message" class="form-control" placeholder="{{ t('app', 'Additional Message') }}" rows="5"></textarea>
                                <label class="text-left" for="form-contact-input-message">{{ t('app', 'Additional Message') }}</label>
                            </div>
                        </div>
                        <button class="btn btn-primary">{{ t('app', 'Submit') }}</button>
                    </form>
                </div>
            </section>
            {{- endBlock() -}}
        </main>
        <footer>
            <div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <nav>
                                <h5>{{ t('app', 'Navigation')}}</h5>
                                <ul>
                                    <li><a href="{{ url(['/']) }}">{{ t('app', 'Home') }}</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-md-4 order-md-first">
                            <h5>{{ t('app', 'Trinalusion')}}</h5>
                            <div>
                                <i class="fa fa-phone"></i> <a href="tel:+60175858695">+6017-585 8605</a>
                            </div>
                            <a href="#"><i class="fab fa-facebook"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-google"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div class="container text-center py-1">
                    <small class="px-2 border-right">{{ t('app', 'Copyright &copy; {year} Trinalusion all rights reserved', {year: "now"|date('Y')})|raw }}</small>
                    <small class="px-2 border-right"><a href="{{ url(['/privacy-policy']) }}">{{ t('app', 'Privacy Policy') }}</a></small>
                    <small class="px-2 "><a href="{{ url(['/sitemap']) }}">{{ t('app', 'Sitemap') }}</a></small>
                </div>
            </div>
        </footer>
    </div>
    <div id="preloader" class="preloader fade show">
        <h1>Trinalusion</h1>
    </div>
{% endblock %}